<div id="show_container">
    {{#if title}}
        <img id="mainShowPhoto" src="{{photo}}">
        <h2>{{title}}</h2>
        <p id="showSummary">{{summary}}</span>
        <p class="showDate">{{showDate}}</p>
    {{ else }}
        <h2>Not found</h2>
    {{/if}}
    <div id="dudePhotos">
        sub-photos
    </div>
    {{#if authorized}}
        <p>
            <a href="#" id="editDudeBtn">EDIT</a>
        </p>
    {{/if}}
</div>
